include "m8c.inc"


;--------------------------------------------------
; Constants for Segundos API's.
;--------------------------------------------------

Segundos_CONTROL_REG_START_BIT:            equ 0x01    ; Control register start bit
Segundos_INT_REG:                          equ 0x0e1
Segundos_INT_MASK:                         equ 0x20


;--------------------------------------------------
; Constants for Segundos user defined values
;--------------------------------------------------

Segundos_PERIOD:                           equ 0x0
Segundos_COMPARE_VALUE:                    equ 0x0


;--------------------------------------------------
; Register Address Constants for Segundos
;--------------------------------------------------

Segundos_COUNTER_LSB_REG:              equ 0x30   ; DR0 Counter register
Segundos_COUNTER_MSB_REG:              equ 0x34
Segundos_PERIOD_LSB_REG:               equ 0x31   ; DR1 Period register
Segundos_PERIOD_MSB_REG:               equ 0x35
Segundos_COMPARE_LSB_REG:              equ 0x32   ; DR2 CompareValue register
Segundos_COMPARE_MSB_REG:              equ 0x36
Segundos_CONTROL_LSB_REG:              equ 0x33   ; Control register
Segundos_CONTROL_MSB_REG:              equ 0x37
Segundos_FUNC_LSB_REG:                 equ 0x30   ; Function register
Segundos_FUNC_MSB_REG:                 equ 0x34
Segundos_INPUT_LSB_REG:                equ 0x31   ; Input register
Segundos_INPUT_MSB_REG:                equ 0x35
Segundos_OUTPUT_LSB_REG:               equ 0x32   ; Output register
Segundos_OUTPUT_MSB_REG:               equ 0x36


;--------------------------------------------------
; Segundos Macro 'Functions'
;--------------------------------------------------

   macro Segundos_Start_M
   or    reg[Segundos_CONTROL_LSB_REG],  Segundos_CONTROL_REG_START_BIT
   endm

   macro Segundos_Stop_M
   and   reg[Segundos_CONTROL_LSB_REG], ~Segundos_CONTROL_REG_START_BIT
   endm

   macro Segundos_EnableInt_M
   M8C_EnableIntMask Segundos_INT_REG, Segundos_INT_MASK
   endm

   macro Segundos_DisableInt_M
   M8C_DisableIntMask Segundos_INT_REG, Segundos_INT_MASK
   endm


